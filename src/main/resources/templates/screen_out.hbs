<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Image Aggregator</title>
</head>
<body>
    <div style="text-align: center">
        <img src="{{ img.src }}" style="max-width: 98vw; max-height: 98vh" alt="picture">
    </div>

    <script>
        window.onkeydown = (e) => {
            if(e.key === "Delete") {
                document.body.innerHTML = "<div style=\"text-align: center; margin-top: 20vh;\">Loading</div>";
                window.location.replace('/screenOut/delete');
            }
            if(e.key === "ArrowRight") {
                document.body.innerHTML = "<div style=\"text-align: center; margin-top: 20vh;\">Loading</div>";
                window.location.replace('/screenOut/pass');
            }
        };
    </script>
</body>
</html>